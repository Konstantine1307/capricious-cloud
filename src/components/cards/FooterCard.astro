---
interface Props {
    title: string;
}

const { title } = Astro.props
---

<div class='flex flex-col mx-auto space-y-4 p-2 border border-1 border-white rounded-md text-white w-72 py-4'>
  <div>
      <p class='flex flex-col text-white text-lg mb-3'>
        {title}</p>
  </div>
  <slot />
 
</div>
