---
const navLinks = [
  ['Home', '/'],
  ['About', '#about'],
  ['Rooms', '#accommodation'],
  ['Promos', '#promos'],
  ['Reviews', '#reviews'],
  ['Contact', '#contact'],
];
---
<div class="relative">
<!-- Menu/Logo Container -->
<nav class='flex items-center justify-between text-white w-full'>
  <!-- Logo -->
  <a href='/' class='w-80 font-serif-pro text-xl text-brown-dark'
    >The Wellhall</a
  >
  <!-- Menu -->
  <div class='hidden h-10 md:w-full md:flex md:space-x-8 md:justify-end'>
    {
      navLinks.map(([title, url]) => (
        <div class='group'>
          <a href={url} class='text-brown-dark'>
            {title}
          </a>
          <div class='mx-2 group-hover:border-b group-hover:border-orange-900' />
        </div>
      ))
    }
  </div>
  <!-- Hamburger Button -->
  <div class='md:hidden'>
    <button
      id='menu-btn'
      type='button'
      class='block hamburger md:hidden focus:outline-none'
    >
      <span class='hamburger-top'></span>
      <span class='hamburger-middle'></span>
      <span class='hamburger-bottom'></span>
    </button>
  </div>
</nav>

<!-- Mobile Menu -->
<div
  id='menu'
  class='absolute top-0 left-0 hidden flex-col self-end w-full py-1 pt-10 pl-12 space-y-3 text-lg text-white uppercase bg-brown-op95 z-30 min-h-screen'
>
  {
    navLinks.map(([title, url]) => (
      <a href={url} class='hover:text-yellow-500'>
        {title}
      </a>
    ))
  }
</div>
</div>

<style>

  nav {
    padding: 1rem;
    width: 100vw;
    max-width: calc(100% - 1rem);;
  }
  /* Hamburger Menu */

  .hamburger {
    cursor: pointer;
    width: 24px;
    height: 24px;
    transition: all 0.25s;
    position: relative;
  }

  .hamburger-top,
  .hamburger-middle,
  .hamburger-bottom {
    position: absolute;
    width: 24px;
    height: 2px;
    top: 0;
    left: 0;
    background: rgb(var(--accent-brown));
    transform: rotate(0);
    transition: all 0.5s;
  }

  .hamburger-middle {
    transform: translateY(7px);
  }

  .hamburger-bottom {
    transform: translateY(14px);
  }

  .open {
    transform: rotate(90deg);

    & .hamburger-top {
      transform: rotate(45deg) translateY(6px) translateX(6px);
      background: white;
    }
    & .hamburger-middle {
      display: none;
    }
    & .hamburger-bottom {
      transform: rotate(-45deg) translateY(6px) translateX(-6px);
      background: white;
    }
  }
</style>

<script is:inline>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');

  btn.addEventListener('click', navToggle);
  menu.addEventListener('click', navToggle);

  function navToggle() {
    btn.classList.toggle('open');
    menu.classList.toggle('flex');
    menu.classList.toggle('hidden');
  }
</script>
